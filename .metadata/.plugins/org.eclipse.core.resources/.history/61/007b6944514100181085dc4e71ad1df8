package test;

import javax.swing.JOptionPane;

public class ArrayTest {

	public static void main(String[] args)
	{
		String s1 = "";
		String s2 = "";
		String num = "";
		manageArray tutle = new manageArray(20);
		while(true)
		{
			s1 = String.format("%s \n Enter to order",s2);
			String order = JOptionPane.showInputDialog(s1);
			if(order == "5") 
			{
				num = JOptionPane.showInputDialog("Enter the cell");
				tutle.renewArray(num);
			}
			else 
			{
				tutle.renewArray(order);	// 위치 이외의 원래 명령
			}
			tutle.renewArray("6"); // 변화를 바로 보여주기 위함
		}
	}
}
