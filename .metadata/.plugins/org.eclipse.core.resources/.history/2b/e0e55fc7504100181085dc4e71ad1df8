package test;

import java.awt.Graphics;
import javax.swing.JPanel;
import java.awt.Color;

public class DrawArray extends JPanel{
	
		private int[][] array;
		private int lenOfArray;
		private int sizeOfArray = 2;
		
		public DrawArray(int[][] array, int len){
			this.array = array;
			this.lenOfArray = len;
		}
		
		public int getSizeOfArray(){
			return sizeOfArray;
		}
	
		public void paintComponent(Graphics g){
			super.paintComponent(g);
			
			int width = getWidth();
			int height = getHeight();
			
			g.setColor(Color.black);
			
			for(int y=0 ; y<lenOfArray; y++){
				for(int x=0 ; x<lenOfArray ; x++){
					if(array[x][y] == 1)
						g.fillRect(x*sizeOfArray,y*sizeOfArray,sizeOfArray,sizeOfArray);
				}
			}
			
		}
}