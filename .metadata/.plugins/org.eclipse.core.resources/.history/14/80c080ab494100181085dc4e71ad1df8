package test;

import java.awt.Graphics;
import javax.swing.JPanel;
import java.awt.Color;

public class DrawSpirals extends JPanel{
	
	public void paintComponent(Graphics g)
	{
		super.paintComponent(g);
	
		int len = 30;
		
		int width = getWidth();
		int height = getHeight();
		
		int curX = width/2;
		int curY = height/2;
		
		g.setColor(Color.black);
		
		while()
		{
			g.drawLine(curX,curY,curX,curY+len);
			curY += len;
			g.drawLine(curX,curY,curX-len,curY);
			curX -= len;	
			len += 30;		// 길이를 30 늘린다.
		
			g.drawLine(curX,curY,curX,curY-len);
			curY -= len;
			g.drawLine(curX,curY,curX+len,curY);
			curX += len;
			len += 30;		// 길이를 30 늘린다.
		}
	}
	
}
