package test;

import javax.swing.JOptionPane;

public class ArrayTest {

	public static void main(String[] args)
	{
		String s;
		manageArray tutle = new manageArray(200);
		while(true)
		{
			s = String.format("%s \n Enter to order",s);
			String order = JOptionPane.showInputDialog(s);
			s = "";
			if(order == "position")
				s = tutle.position();		// 현재 위치를 알려주는 명령
			if(order == "0" || order == "90" || order == "180" || order == "270" || order == "360")
				tutle.setheading(order)
			else
				
				tutle.renewArray(order);	// 위치 이외의 원래 명령
		}
	}
}
